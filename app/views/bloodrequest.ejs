<!DOCTYPE html>
<html>
<head>
	<title>
		<%=title %>
	</title>

	<link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/signin.css" rel="stylesheet">
    <script src="js/jquery.min.js"></script>
</head>
<body class="bg-backgroundmain">
<div class="container">	

<div class="row">
<% include partials/navbar %>
</div>

<div class="row">

	<div class="container">		
		<div class="col-md-6">
	        <div class="text-center">    	      
    	      <form class="form-horizontal" action="/bgrequest" method="post">
	        	<h2 class="form-signin-heading text-center">Submit Request</h2>
        
		        <div class="form-group">
					<label class="col-lg-3 control-label"> Blood Group: </label> 
					<div class="col-lg-8">
						<div class="ui-select">
							<select id="req_bg" class="form-control" name="patientbloodgroup">
								<option value="A+"> A+ </option>
								<option value="A-"> A- </option>
								<option value="B+"> B+ </option>
								<option value="B-"> B- </option>
								<option value="AB+"> AB+ </option>
								<option value="AB-" selected="selected"> AB- </option>
								<option value="O+"> O+ </option>
								<option value="O-"> O- </option>
							</select>
						</div>
					</div>
				</div>

          		<div class="form-group">
            		<label class="col-lg-3 control-label">Patient name:</label>
            		<div class="col-lg-8">
              			<input class="form-control" type="text" value="<%=pname%>" name="patientname">
            		</div>
          		</div>          
          		<div class="form-group">
            		<label class="col-lg-3 control-label">Patient Age:</label>
            		<div class="col-lg-8">
              			<input class="form-control" type="text" value="<%=page%>" name="patientage">
            		</div>
          		</div>          
          		<div class="form-group">
            		<label class="col-lg-3 control-label">Hospital:</label>
            		<div class="col-lg-8">
              			<input class="form-control" type="text" value="<%=phospital%>" name="patienthospital">
            		</div>
          		</div>          

          		<div class="form-group">
            		<label class="col-lg-3 control-label">Patient Location:</label>
            		<div class="col-lg-8">
              			<input class="form-control" type="text" value="<%=parea%>" name="area">
              			<input class="form-control" type="text" value="<%=pcity%>" name="city">
              			<input class="form-control" type="text" value="<%=pstate%>" name="state">
              			<input class="form-control" type="text" value="<%=ppincode%>" name="pincode">              			
            		</div>
          		</div>          
				<div class="form-group">
		            <div class="col-md-12">
    	          		<input type="submit" class="btn btn-primary" value="Save Changes">
        	      		<span></span>
            	  		<input type="reset" class="btn btn-default" value="Reset">
            		</div>	
            	</div>        	
      		  </form>      	    	      
        	</div>
      	</div>
		
       <div class="col-md-6 search-map">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <i class="fa fa-coffee"></i>
		<% for(var i in messages) { %>
			<div class="flash">
				<%= messages[i] %>
			</div>
		<% } %>

        </div>
        <div class="search-map">
        	<div class="search-map" id="map" height="200px">
        	
        	</div>
        
        </div>
        
       </div> 

      	
    </div>
</div>    


<div class="row">
<% include partials/footer %>
</div>

</div>

    
<script src="js/searchdonor.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?callback=initMap"></script>    
</body>
</html>